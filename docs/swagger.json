        "input.EditCourseInfo": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string",
                    "maxLength": 255,
                    "example": "Effective Eureka is a course about effective eureka."
                },
                "thumbnail": {
                    "type": "string",
                    "example": "https://example.com/thumbnail.png"
                },
                "title": {
                    "type": "string",
                    "maxLength": 255,
                    "example": "Effective Eureka"
                }
            }
        },
        "input.StudentInfo": {
            "type": "object",
            "required": [
                "password",
                "username"
            ],
            "properties": {
                "password": {
                    "type": "string",
                    "maxLength": 64,
                    "minLength": 8,
                    "example": "123456789"
                },
                "username": {
                    "type": "string",
                    "example": "john@doe.com"
                }
            }
        },
        "shared.FieldError": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string",
                    "example": "field_name"
                },
                "message": {
                    "type": "string",
                    "example": "field_name is required"
                }
            }
        }
